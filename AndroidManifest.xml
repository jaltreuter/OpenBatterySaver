<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masonware.openbatterysaver"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name="com.masonware.openbatterysaver.BatterySaverApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.masonware.openbatterysaver.settings.SettingsActivity"
            android:label="@string/app_name" >
		    <intent-filter>
		        <action android:name="android.intent.action.MAIN" />
		        <category android:name="android.intent.category.LAUNCHER" />
		    </intent-filter>
        </activity>
        <activity
            android:name="com.masonware.openbatterysaver.TestActivity"
            android:label="Test" >
		    <!--  intent-filter>
		        <action android:name="android.intent.action.MAIN" />
		        <category android:name="android.intent.category.LAUNCHER" />
		    </intent-filter-->
        </activity>
        
        <service
            android:name="com.masonware.openbatterysaver.service.BatterySaverService"
            android:exported="false">
		    <intent-filter>
		        <action android:name="com.masonware.batteryservice" />
		    </intent-filter>
        </service>
    </application>

</manifest>